{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "plugin:@tanstack/eslint-plugin-query/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "@tanstack/query"],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off"
  },
  "ignorePatterns": [
    "app/_layout.tsx",
    "app/+html.tsx",
    "components/Themed.tsx"
  ]
}
