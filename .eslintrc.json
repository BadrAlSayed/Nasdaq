{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "space-before-function-paren": ["error", "never"]
  },
  "ignorePatterns": [
    "app/_layout.tsx",
    "app/+html.tsx",
    "components/Themed.tsx"
  ]
}
